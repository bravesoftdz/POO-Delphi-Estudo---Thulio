unit Classe.Pessoa;

interface

uses
  System.SysUtils, Classe.SQL;

type
  TPessoa = class
    private
      FNome : String;
    public
      DataNasc : String;
      Sexo : String;
      Etnia : String;
      SQL : TConSQL;
      property Nome : String read FNome write FNome;
      function Idade : Integer;
  end;

implementation

{ TPessoa }

function TPessoa.Idade : Integer;
begin
  Result := Trunc((now - StrToDate(DataNasc)) / 365.25);
end;

end.
