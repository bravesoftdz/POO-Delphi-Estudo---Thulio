unit Classe.Pessoa;

interface

uses
  System.SysUtils;

type
  TPessoa = class
    private

    public
      Nome : String;
      DataNasc : String;
      Sexo : String;
      Etnia : String;
      function Idade : Integer;
      SQL : TConSQL;
  end;

implementation

{ TPessoa }

uses Classe.SQL;

function TPessoa.Idade : Integer;
begin
  Result := Trunc((now - StrToDate(DataNasc)) / 365.25);
end;

end.
